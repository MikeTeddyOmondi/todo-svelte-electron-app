  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "concurrently": "^8.0.1",
    "electron": "^24.4.0",
    "electron-builder": "^24.4.0",
    "svelte": "^3.57.0",
    "vite": "^4.3.2"
  },
  "dependencies": {
    "@picocss/pico": "^1.5.10",
    "boxicons": "^2.1.4",
    "localbase": "^0.7.5",
    "svelte-spa-router": "^3.3.0"
  }
}
