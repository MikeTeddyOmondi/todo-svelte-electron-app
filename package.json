{
  "name": "todo-svelte-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:start": "sleep 1 && electron .",
    "start": "concurrently 'npm:dev' 'npm:electron:start'",
